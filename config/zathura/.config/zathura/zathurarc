# Set font
set font "JetBrains Mono Nerd Font 9"

# Open document in fit-width mode by default
set adjust-open "best-fit"

#set page per row
set pages-per-row 1

set notification-error-bg       "#22272e" # bg
set notification-error-fg       "#ff938a" # bright:red
set notification-warning-bg     "#22272e" # bg
set notification-warning-fg     "#c69026" # bright:yellow
set notification-bg             "#22272e" # bg
set notification-fg             "#6cb6ff" # bright:green

set completion-bg               "#504945" # bg2
set completion-fg               "#d8caac" # fg
set completion-group-bg         "#3c3836" # bg1
set completion-group-fg         "#d8caac" # gray
set completion-highlight-bg     "#83b6af" # bright:blue
set completion-highlight-fg     "#504945" # bg2

# Define the color in index mode
set index-bg                    "#504945" # bg2
set index-fg                    "#d8caac" # fg
set index-active-bg             "#83b6af" # bright:blue
set index-active-fg             "#504945" # bg2

set inputbar-bg                 "#22272e" # bg
set inputbar-fg                 "#6cb6ff" # fg

set statusbar-bg                "#007ACC" # bg2
set statusbar-fg                "#D8DEE9" # fg

set highlight-color             "#fabd2f" # bright:yellow
set highlight-active-color      "#fe8019" # bright:orange

set default-bg                  "#1e1e1e" # bg
set default-fg                  "#d4d4d4" # fg
set render-loading              true
set render-loading-bg           "#1e1e1e" # bg
set render-loading-fg           "#d4d4d4" # fg

# Recolor book content's color
set recolor-lightcolor          "#1e1e1e" # bg
set recolor-darkcolor           "#d4d4d4" # fg
set recolor                     "false"
set recolor-keephue             "true"      # keep original color

set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map i recolor
map p print
map <C-i> zoom in 
map <C-o> zoom out
